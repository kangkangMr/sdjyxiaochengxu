.userinfo{
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #000;  
  display: flex; 
  font-size:40rpx;  
  flex-direction: column;  
  align-items: center;
  background-color: #fff;  
}
.img{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2rpx solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.userindex{
  margin-top:40rpx;
  background-color:#fff;
  padding:0 40rpx;   
}
.userindex .view{
  overflow: hidden;
  width: 100%;
  height: 90rpx;
  border-bottom:1px solid #ededed; 
  line-height: 90rpx;
}
.right{
  float: right;
}
.userindex view:last-child{
  border-bottom:none;
}
.userindex image{
  width: 40rpx;
  height: 40rpx;
  margin:10rpx 30rpx 0 0; 
}
